<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.MaterialComponents.NoActionBar.Bridge">

        <item name="android:colorPrimary">@color/lb_default_brand_color</item>
        <item name="android:colorPrimaryDark">@color/lb_default_brand_color_dark</item>
        <item name="android:colorAccent">@color/fastlane_background</item>

